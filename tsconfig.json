{
  "extends": "@codibre/confs/tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "allowJs": true,
    "verbatimModuleSyntax": false,
    "sourceMap": true
  },
  "include": [
    "./src",
    "./test",
    "test/benchmark",
    "test/memory"
  ]
}
